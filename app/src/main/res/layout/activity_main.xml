<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tvNavTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life Force"
                android:textColor="@color/colorOnPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLoginTop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Login"
                android:textColor="@color/colorOnPrimary"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/colorSecondary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
        </RelativeLayout>

        <!-- Banner -->
        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blood_banner"
            android:contentDescription="Banner Image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“Donate blood, give life, be a hero!”"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Buttons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBecomeDonor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Become a Donor"
                android:textColor="@color/colorOnPrimary"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFindCamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Nearest Camp"
                android:textColor="@color/colorOnPrimary"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFindBlood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Find Blood"
                android:textColor="@color/colorOnPrimary"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGeneralCheckup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="General Checkup"
                android:textColor="@color/colorOnPrimary"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="12dp"/>
        </GridLayout>

        <!-- Awareness Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awareness"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvAwareness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorCardBackground"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"/>

        <!-- Chatbot WebView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chatbot"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp"/>

        <WebView
            android:id="@+id/chatbotWebView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scrollbars="vertical"/>
    </LinearLayout>
</ScrollView>
