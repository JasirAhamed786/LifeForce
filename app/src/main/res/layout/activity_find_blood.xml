<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Blood Donor"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by blood type and/or location"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center"
            android:paddingBottom="24dp"/>

        <!-- Blood Group Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintTextColor="@color/colorTextSecondary"
            app:startIconDrawable="@drawable/ic_blood">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBloodGroupSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Blood Group (e.g. A+)"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintTextColor="@color/colorTextSecondary"
            app:startIconDrawable="@drawable/ic_location">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLocationSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Location (optional)"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Search Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearchBlood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Search"
            android:textColor="@color/colorOnPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"/>

        <!-- Donor List -->
        <ListView
            android:id="@+id/lvDonors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="8dp"
            android:paddingBottom="16dp"
            android:listSelector="@color/colorSecondary"/>

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="â¬… Back"
            android:textColor="@color/colorOnPrimary"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/colorSecondary"
            app:elevation="2dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
